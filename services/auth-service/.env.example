# Server Configuration
PORT=5001
NODE_ENV=development

# Frontend Configuration
FRONTEND_URL=http://localhost:3000

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/swiftpay_auth"
DIRECT_URL="postgresql://username:password@localhost:5432/swiftpay_auth"

# Reds URL (Docker or Upstash)
REDIS_URL=redis://localhost:6379

# EmailJS Configuration
EMAILJS_SERVICE_ID=your_emailjs_service_id
EMAILJS_VERIFICATION_TEMPLATE_ID=your_verification_template_id
EMAILJS_RESET_TEMPLATE_ID=your_reset_template_id
EMAILJS_PUBLIC_ID=your_emailjs_public_key
EMAILJS_PRIVATE_ID=your_emailjs_private_key

# Security (Optional - for future JWT implementation)
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_random
JWT_EXPIRES_IN=24h

# Rate Limiting (Optional - defaults are set in code)
AUTH_RATE_LIMIT_WINDOW_MS=900000
AUTH_RATE_LIMIT_MAX_REQUESTS=5
GENERAL_RATE_LIMIT_WINDOW_MS=900000
GENERAL_RATE_LIMIT_MAX_REQUESTS=100

# Service Secrets
AUTH_SERVICE_SECRET=<your-service-secrets>
USER_SERVICE_SECRET=<your-service-secrets>
WALLET_SERVICE_SECRET=<your-service-secrets>
TRANSACTION_SERVICE_SECRET=<your-service-secrets>
PAYMENT_SERVICE_SECRET=<your-service-secrets>
NOTIFICATION_SERVICE_SECRET=<your-service-secrets>